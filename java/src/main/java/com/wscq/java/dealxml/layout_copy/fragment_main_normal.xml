<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/x73"
    android:paddingRight="@dimen/x73"
    android:paddingTop="@dimen/y35">

    <ImageView
        android:id="@+id/first_card"
        android:layout_width="@dimen/x231"
        android:layout_height="@dimen/y339"
        app:srcCompat="@drawable/ic_wait_for_more" />

    <ImageView
        android:id="@+id/second_card"
        android:layout_width="@dimen/x231"
        android:layout_height="@dimen/y339"
        android:layout_marginLeft="@dimen/x60"
        app:srcCompat="@drawable/ic_wait_for_more" />

    <ImageView
        android:id="@+id/third_card"
        android:layout_width="@dimen/x231"
        android:layout_height="@dimen/y339"
        android:layout_marginLeft="@dimen/x60"
        app:srcCompat="@drawable/ic_wait_for_more" />
</LinearLayout>
