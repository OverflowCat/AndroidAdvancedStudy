<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/x50"
    android:layout_marginRight="@dimen/x50"
    android:background="@drawable/background_main_first_fragment"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/x190"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/login_user_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/user_avatar_iv"
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/y70"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y47"
                android:focusableInTouchMode="true"
                app:srcCompat="@drawable/ic_boy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y27"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x23"
                    android:layout_height="@dimen/y23"
                    app:srcCompat="@drawable/ic_main_name" />

                <TextView
                    android:id="@+id/user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x12"
                    android:layout_marginStart="@dimen/x12"
                    android:maxWidth="@dimen/x90"
                    android:singleLine="true"
                    android:text="小明小明小明小明小明"
                    android:textColor="@color/c1_1"
                    android:textSize="@dimen/t9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y19"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x23"
                    android:layout_height="@dimen/y23"
                    app:srcCompat="@drawable/ic_grade" />

                <TextView
                    android:id="@+id/user_grade_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x12"
                    android:layout_marginStart="@dimen/x12"
                    android:maxWidth="@dimen/x90"
                    android:singleLine="true"
                    android:text="三年级三年级三年级"
                    android:textColor="@color/c1_1"
                    android:textSize="@dimen/t9" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/school_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y19"
                android:orientation="horizontal"
                tools:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/x23"
                    android:layout_height="@dimen/y23"
                    app:srcCompat="@drawable/ic_school" />

                <TextView
                    android:id="@+id/user_school_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x12"
                    android:layout_marginStart="@dimen/x12"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/x6"
                    android:maxLines="2"
                    android:maxWidth="@dimen/x90"
                    android:text="北京市海淀区中关村二区中关村二区中关村二小"
                    android:textColor="@color/c1_1"
                    android:textSize="@dimen/t9" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_setting_tv"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/y35"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y58"
                android:background="@drawable/selector_rect_b1_1_pressed_b1_2_5dp"
                android:gravity="center"
                android:text="个人中心"
                android:textColor="@color/c1_1"
                android:textSize="@dimen/t9" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logout_user_info_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="gone">

            <ImageView
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/y70"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_boy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/y20"
                    android:paddingLeft="@dimen/x16"
                    android:paddingRight="@dimen/x6"
                    android:paddingTop="@dimen/y20"
                    android:text="培训账号"
                    android:textColor="@color/c1_1"
                    android:textSize="@dimen/t8" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/app_list_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/first_card"
                android:layout_width="@dimen/x231"
                android:layout_height="@dimen/y339"
                android:layout_marginLeft="@dimen/x73"
                app:srcCompat="@drawable/ic_wait_for_more" />

            <ImageView
                android:id="@+id/second_card"
                android:layout_width="@dimen/x231"
                android:layout_height="@dimen/y339"
                android:layout_marginLeft="@dimen/x60"
                app:srcCompat="@drawable/ic_wait_for_more" />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>
