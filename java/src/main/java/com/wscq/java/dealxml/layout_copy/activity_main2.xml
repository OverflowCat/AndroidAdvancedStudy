<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hqyxjy.launcher.service.packagedownload.example1.TestDownloadActivity">

    <TextView
        android:id="@+id/task_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="开始下载任务1"
        android:textSize="@dimen/t3"
        android:textColor="@color/c3_1"
        android:layout_margin="@dimen/x20"
        android:padding="@dimen/x20"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/task_2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="开始下载任务2"
        android:textSize="@dimen/t3"
        android:textColor="@color/c3_1"
        android:layout_margin="@dimen/x20"
        android:padding="@dimen/x20"
        android:background="@color/white"/>

</LinearLayout>
