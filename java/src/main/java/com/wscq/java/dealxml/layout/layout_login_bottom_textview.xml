<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="horizontal"
    android:paddingLeft="22.5dp"
    android:paddingRight="22.5dp"
    tools:showIn="@layout/view_phone_password_button">

    <TextView
        android:id="@+id/left_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="忘记密码？"
        android:textColor="@color/c1_1_80"
        android:textSize="@dimen/t10" />

    <TextView
        android:id="@+id/middle_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="中间按钮"
        android:textColor="@color/c1_1_80"
        android:textSize="@dimen/t10"
        android:visibility="gone" />

    <TextView
        android:id="@+id/right_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="手机号快捷登录"
        android:textColor="@color/b1_1"
        android:textSize="@dimen/t10" />
</LinearLayout>