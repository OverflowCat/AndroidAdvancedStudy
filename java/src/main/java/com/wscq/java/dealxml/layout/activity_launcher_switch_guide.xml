<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_default_bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_switch_mode_guide"
        android:layout_marginTop="54dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        >
        <TextView
            android:id="@+id/back_study_mode"
            android:layout_width="198dp"
            android:layout_height="45dp"
            android:text="返回学习模式"
            android:gravity="center"
            android:textSize="@dimen/t7"
            android:textColor="@color/c1_1"
            android:background="@drawable/shape_rect_c1_1_3dp_stroke_1px"
            />
        <TextView
            android:id="@+id/enter_normal_mode"
            android:layout_width="198dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:textSize="@dimen/t7"
            android:textColor="@color/c1_1"
            android:background="@drawable/shape_rect_c1_1_3dp_stroke_1px"
            android:text="进入非学习模式"/>
    </LinearLayout>
</LinearLayout>
