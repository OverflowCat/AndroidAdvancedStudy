<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x460"
        android:layout_height="@dimen/y340"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y20"
        android:background="@drawable/ic_update"
        android:orientation="vertical">

        <TextView
            android:id="@+id/version_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y65"
            android:gravity="center_horizontal"
            android:text="发现新版本V2.0.0"
            android:textColor="@color/b1_1"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/version_time_and_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="2017年9月10日发布 52.8M"
            android:textColor="@color/h1_6"
            android:textSize="12sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y75"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginRight="@dimen/x60"
            android:layout_marginTop="@dimen/y28"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/version_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/x7"
                    android:text="1、修复一些小问题；\n2、其他小优化。\n3、修复一些小问题；\n4、其他小优化。\n1、修复一些小问题；\n2、其他小优化。\n3、修复一些小问题；\n4、其他小优化。\n1、修复一些小问题；\n2、其他小优化。\n3、修复一些小问题；\n4、其他小优化。"
                    android:textColor="@color/h1_3"
                    android:textSize="@dimen/t10" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.hqyxjy.launcher.widget.DownloadInstallStatusView
        android:id="@+id/download_install_status_view"
        android:layout_width="@dimen/x290"
        android:layout_height="@dimen/y40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y30" />

    <!--<com.hqyxjy.core.widget.DownloadProgressView-->
        <!--android:id="@+id/download_install_status_view"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_width="@dimen/x290"-->
        <!--android:layout_height="@dimen/y40"-->
        <!--android:layout_marginTop="@dimen/y30"-->
        <!--app:radius="@dimen/x4"-->
        <!--app:stopColor="@color/c1_2"-->
        <!--app:loadingColor="@color/c1_2"-->
        <!--app:textColor="@color/b1_1"/>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y0"
        android:layout_weight="1"
        android:orientation="vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/y15"
        android:text="*为避免下载失败，请尽量停留在当前页面，保证设备联网，且电量不低于20%"
        android:textColor="@color/c4_1_50"
        android:textSize="15sp" />
</LinearLayout>
