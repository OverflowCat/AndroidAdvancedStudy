<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#032049"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fresh_guide_config_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y80"
            app:srcCompat="@drawable/selector_connect_net" />

        <TextView
            android:id="@+id/fresh_guide_config_net_skip"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y40"
            android:layout_marginTop="@dimen/y50"
            android:background="@drawable/selector_rect_b1_1_pressed_b1_2_20dp"
            android:gravity="center"
            android:text="跳过"
            android:textColor="@color/selector_b1_1_pressed_b1_2_disable_c1_1_30"
            android:textSize="@dimen/t7" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y48"
        android:paddingLeft="@dimen/global_margin_horizontal"
        android:paddingRight="@dimen/global_margin_horizontal"
        android:src="@drawable/selector_ic_toolbar_back" />
</FrameLayout>
