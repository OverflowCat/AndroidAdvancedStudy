<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_default_bg">

    <TextView
        android:id="@+id/debug_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快速进入系统桌面"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/system_setting_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/y20"
        android:text="系统"
        android:textColor="@color/c1_1_60"
        android:textSize="@dimen/t7"
        app:layout_constraintEnd_toStartOf="@+id/system_setting_system_buttons"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/system_setting_system_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x8"
        android:orientation="vertical"
        android:paddingTop="@dimen/y20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/system_setting_system"
        app:layout_constraintTop_toBottomOf="@+id/system_setting_system">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/system_setting_app_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x60"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y52_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_app_manager" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:text="应用管理"
                        android:textColor="@color/c1_1"
                        android:textSize="@dimen/t8" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/x275"
                    android:layout_height="@dimen/y1"
                    android:background="@color/c1_1_30" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/system_setting_dataAndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y52_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_systemsetting_time" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:text="日期与时间"
                        android:textColor="@color/c1_1"
                        android:textSize="@dimen/t8" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/x275"
                    android:layout_height="@dimen/y1"
                    android:background="@color/c1_1_30" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/system_setting_netSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x60"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y52_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_systemsetting_network" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:text="网络设置"
                        android:textColor="@color/c1_1"
                        android:textSize="@dimen/t8" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/x275"
                    android:layout_height="@dimen/y1"
                    android:background="@color/c1_1_30" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/system_setting_displayAndLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y52_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_systemsetting_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:text="显示与亮度"
                        android:textColor="@color/c1_1"
                        android:textSize="@dimen/t8" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/x275"
                    android:layout_height="@dimen/y1"
                    android:background="@color/c1_1_30" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/system_setting_soundSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x60"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y52_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_systemsetting_sound" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:text="声音设置"
                        android:textColor="@color/c1_1"
                        android:textSize="@dimen/t8" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/x275"
                    android:layout_height="@dimen/y1"
                    android:background="@color/c1_1_30" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/system_setting_systemUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y52_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_systemsetting_update" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:text="系统升级"
                        android:textColor="@color/c1_1"
                        android:textSize="@dimen/t8" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/x275"
                    android:layout_height="@dimen/y1"
                    android:background="@color/c1_1_30" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/system_setting_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/y60"
        android:text="个人"
        android:textColor="@color/c1_1_60"
        android:textSize="@dimen/t7"
        app:layout_constraintEnd_toStartOf="@+id/system_setting_personal_buttons"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/system_setting_system_buttons" />

    <LinearLayout
        android:id="@+id/system_setting_personal_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/y20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/system_setting_personal"
        app:layout_constraintTop_toBottomOf="@+id/system_setting_personal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/system_setting_downSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x60"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y52_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_download_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:text="下载设置"
                        android:textColor="@color/c1_1"
                        android:textSize="@dimen/t8" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/x275"
                    android:layout_height="@dimen/y1"
                    android:background="@color/c1_1_30" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/system_setting_lockPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y52_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_systemsetting_password" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:text="锁屏密码"
                        android:textColor="@color/c1_1"
                        android:textSize="@dimen/t8" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/x275"
                    android:layout_height="@dimen/y1"
                    android:background="@color/c1_1_30" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/system_setting_changeLearnMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x60"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y52_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_systemsetting_modesetting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:text="学习模式切换"
                        android:textColor="@color/c1_1"
                        android:textSize="@dimen/t8" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/x275"
                    android:layout_height="@dimen/y1"
                    android:background="@color/c1_1_30" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/system_setting_aboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y52_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_systemsetting_aboutus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:text="关于我们"
                        android:textColor="@color/c1_1"
                        android:textSize="@dimen/t8" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/x275"
                    android:layout_height="@dimen/y1"
                    android:background="@color/c1_1_30" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
