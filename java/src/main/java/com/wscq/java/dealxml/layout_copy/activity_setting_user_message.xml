<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_default_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x50"
            android:text="姓名"
            android:textColor="@color/c3_3"
            android:textSize="@dimen/t5" />

        <com.hqyxjy.launcher.widget.edittext.HQEditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x100"
            android:layout_marginRight="@dimen/x50"
            android:background="@null"
            android:hint="必填"
            android:maxLength="16"
            android:paddingLeft="@dimen/x100"
            android:singleLine="true"
            android:textColor="@color/c3_1"
            android:textColorHint="@color/c3_6"
            android:textSize="@dimen/t5"
            app:clean_able="true" />

    </FrameLayout>

    <View
        android:id="@+id/user_name_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_divider_width"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@color/c4_5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x50"
            android:text="性别"
            android:textColor="@color/c3_3"
            android:textSize="@dimen/t5" />

        <RadioGroup
            android:id="@+id/sex_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x200"
            android:layout_marginRight="@dimen/x50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/selector_ic_male"
                android:drawablePadding="@dimen/x40"
                android:text="男"
                android:textColor="@color/selector_c1_1_30_checked_b1_1"
                android:textSize="@dimen/t5" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x60"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/selector_ic_female"
                android:drawablePadding="@dimen/x40"
                android:text="女"
                android:textColor="@color/selector_c1_1_30_checked_b1_1"
                android:textSize="@dimen/t5" />
        </RadioGroup>

    </FrameLayout>

    <View
        android:id="@+id/sex_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_divider_width"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@color/c4_5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x50"
            android:text="年级"
            android:textColor="@color/c3_3"
            android:textSize="@dimen/t5" />

        <TextView
            android:id="@+id/grade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x100"
            android:layout_marginRight="@dimen/x50"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="必填"
            android:paddingLeft="@dimen/x100"
            android:textColor="@color/c3_1"
            android:textColorHint="@color/c3_6"
            android:textSize="@dimen/t5" />

    </FrameLayout>

    <View
        android:id="@+id/gradle_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_divider_width"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@color/c4_5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x50"
            android:text="学校"
            android:textColor="@color/c3_3"
            android:textSize="@dimen/t5" />

        <com.hqyxjy.launcher.widget.edittext.HQEditText
            android:id="@+id/school"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x100"
            android:layout_marginRight="@dimen/x50"
            android:background="@null"
            android:hint=""
            android:maxLength="50"
            android:paddingLeft="@dimen/x100"
            android:singleLine="true"
            android:textColor="@color/c3_1"
            android:textColorHint="@color/c3_6"
            android:textSize="@dimen/t5"
            app:clean_able="true" />

    </FrameLayout>

    <View
        android:id="@+id/school_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_divider_width"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:background="@color/c4_5" />

    <TextView
        android:id="@+id/save"
        style="@style/btn_c1_1_pressed_c1_2_disable_c1_1_60_4dp"
        android:layout_marginTop="@dimen/y80"
        android:text="保存" />
</LinearLayout>
