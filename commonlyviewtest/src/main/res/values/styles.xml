<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Error label text style-->
    <style name="MyErrorText" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">#ff6600</item>
    </style>
    <!--Input field style-->
    <style name="MyEditText" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#ff6600</item>
    </style>
</resources>
